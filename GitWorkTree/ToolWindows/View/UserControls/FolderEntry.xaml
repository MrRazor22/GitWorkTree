<UserControl x:Class="GitWorkTree.ToolWindows.View.UserControls.FolderEntry"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel>
        <Button Margin="0" DockPanel.Dock="Right" Width="Auto" Click="BrowseFolder" Padding="3"  >...</Button>
        <TextBox Height="Auto" HorizontalAlignment="Stretch" DockPanel.Dock="Right" FontSize="14" Padding="5" 
                Text="{Binding FolderPath, Mode=TwoWay}" />
    </DockPanel>
</UserControl>
